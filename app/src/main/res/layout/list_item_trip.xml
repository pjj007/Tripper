<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_item_trip_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Trip Title"/>

    <TextView
        android:id="@+id/list_item_trip_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/list_item_trip_title_text_view"
        android:padding="4dp"
        tools:text="Trip Date"/>

    <TextView
        android:id="@+id/list_item_trip_destination_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Trip Destination"/>

</RelativeLayout>